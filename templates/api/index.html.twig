{% extends 'base.html.twig' %}

{% block title %}Hello APIController!{% endblock %}

{% block body %}
    {% include 'partials/navbar.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <table class="ui celled table">
                    <thead>
                    <tr><th>Name</th>
                        <th>Age</th>
                        <th>Job</th>
                    </tr></thead>
                    <tbody>
                    {% for x in api.results %}
                        <tr>
                            <td data-label="Name">{{ x.list_name }}</td>
                            <td data-label="Age">{{ x.newest_published_date }}</td>
                            <td data-label="Job">{{ x.updated }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>s
        </div>
    </div>
{% endblock %}

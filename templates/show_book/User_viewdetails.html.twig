{% extends 'base.html.twig' %}

{% block title %}View Detail!{% endblock %}

{% block body %}
    {% include('partials/user_nav.html.twig') %}
    <div class="container-fluid">
        <div class="row">
            <div id="container">
                <div class="product-details">

                    <h1>{{ view.name }}</h1>
                    <p class="information">{{ view.description }}</p>
                    <p class="information">~ {{ view.author }}</p>
                    <button class="btn">
                        <a href="{{ path('rent_book', {id: view.id}) }}">Rent</a>
                </div>
                <div class="product-image">
                    <div class="ribbon ribbon-top-right"><span>Rs {{ view.price }}</span></div>
                    <img src="{{ asset('images/' ~ (view.getImage())) }}"
                         alt="">
                </div>

            </div>
        </div>
    </div>

{% endblock %}
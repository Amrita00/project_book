{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <div class="well">
        <div class="row">
            <div class="col-md-12">
                {% for message in app.flashes('success') %}
                    <div class="ui success message">
                        <i class="close icon"></i>
                        <div class="header">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
                <div class="ui segment">

                    <div class="ui form">

                        {{ form_start(form,{'atrr':{novalidate: 'novalidate'}}) }}

                        <legend><h3 class="ui header">New Book</h3></legend>
                        <hr/>
                        {% for field in form %}
                            {% if field.vars.name != '_token' %}
                                <div class="field">
                                    <label>{{ form_label(field) }}</label>
                                    {{ form_widget(field) }}
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                        <button type="submit" id="myBtn" class="ui primary button" style="margin-left: 126px;">Submit</button><br/><br/>
                        <button type="submit" id="cancel" class="ui button" style="margin-left: 126px;">
                            <a href="{{ path('show_book') }}" style="color: white">Cancel</a></button>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

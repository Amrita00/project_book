{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <div class="well">
        <div class="row">
            <div class="col-md-12">
                <div class="ui segment">
                    <div class="ui form">
                        {{ form_start(add_book,{'atrr':{novalidate: 'novalidate'}}) }}

                        <legend><h3 class="ui header">New Book</h3></legend>
                        <hr/>
                        {% for field in add_book.children %}
                            {% if field.vars.name != '_token' %}
                                <div class="field">
                                    <label>{{ form_label(field) }}</label>
                                    {{ form_widget(field) }}
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                        <div class="inline">
                            <button type="submit" id="myBtn" class="ui primary button">
                                Submit
                            </button>
                            <button type="submit" id="cancel" class="ui red button">
                                <a href="{{ path('show_book') }}" style="color: white">Cancel</a>
                            </button>
                        </div>

                        {{ form_end(add_book) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
